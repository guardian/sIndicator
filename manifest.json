{
    "manifest_version": 2,
    "name": "sIndicator",
    "version": "1.0",

    "description": "Indicates whether an article on theguardian.com is available for syndication.",

    "icons": {
	"42": "dist/gu-roundel.png"
    },

    "content_scripts": [
	{
	    "matches": ["*://*.theguardian.com/*"],
	    "css": ["dist/style.css"],
	    "js": ["dist/sindicator.js"]
	}
    ],
    "options_ui": {
	"page": "options.html"
    },
    "permissions": [
	"storage",
	"*://content.guardianapis.com/*"
    ]
}
